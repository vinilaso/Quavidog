                    <a class="nav-link dropdown-toggle drop-text" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa-solid fa-user"></i>
                    Vinicius
                    </a>

                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                    <li>
                    <a class="dropdown-item drop-text" asp-controller="User" asp-action="Update"><i class="fa-solid fa-gear"></i> Opções</a>
                    </li>
                    <li>
                    <a class="dropdown-item drop-text" asp-controller="User" asp-action="UpdatePassword"><i class="fa-solid fa-key"></i> Alterar senha</a>
                    </li>
                    <li style="font-size: 2rem;">
                    <form asp-controller="Login" asp-action="Logout" method="post" id="logoutForm">
                    <a style="cursor: pointer;" class="dropdown-item drop-text" onclick="document.getElementById('logoutForm').submit();"><i class="fa-solid fa-door-open"></i> Logout</a>
                    </form>
                    </li>
                    </ul>
                    </div>*@
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container d-flex flex-row justify-content-around">
            <span class="footer-span">Quavidog Educação Canina LTDA - 31.576.832/0001-84</span>
            <div class="d-flex flex-row justify-content-center">
                <span class="footer-span">
                    <a href="https://www.instagram.com/quavidog.educacao"><i class="fa-brands fa-instagram footer-icon"></i></a>
                </span>
                <span class="footer-span">
                    <a href="https://www.facebook.com/profile.php?id=100072254836806"><i class="fa-brands fa-facebook footer-icon"></i></a>
                </span>
                <span class="footer-span">
                    <a href="https://wa.me//554797517430?text=Ol%C3%A1!%20Gostaria%20de%20receber%20mais%20informa%C3%A7%C3%B5es"><i class="fa-brands fa-whatsapp footer-icon"></i></a>
                </span>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
