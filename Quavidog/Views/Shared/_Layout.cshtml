                        <li class="nav-item">
                            <a class="btn nav-btn" asp-controller="Home" asp-action="Index">Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn nav-btn" asp-controller="Home" asp-action="Test">Creche & Hotel</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn nav-btn" asp-controller="Home" asp-action="Test">Escola</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn nav-btn" asp-controller="Home" asp-action="Test">Adestramento</a>
                        </li>
                    </ul>

                    <div class="end-align login-link">
                        <a class="login-link" asp-controller="Login" asp-action="Index">
                            <i class="fa-solid fa-user"></i>
                            Entrar ou cadastrar-se
                        </a>
                    </div>

